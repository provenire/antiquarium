<%= form_tag create_users_session_path, method: :post, id: 'form-login', class: 'p-t-15' do %>

  <div class="form-group form-group-default">
    <%= label_tag :email %>
    <div class="controls">
      <%= email_field_tag :email, nil, class: 'form-control', required: true %>
    </div>
  </div>

  <div class="form-group form-group-default">
    <%= label_tag :password %>
    <div class="controls">
      <%= password_field_tag :password, nil, class: 'form-control', required: true %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6 no-padding">
      <div class="checkbox ">
        <%= check_box_tag :remember, nil %>
        <%= label_tag :remember, 'Keep Me Signed in' %>
      </div>
    </div>
    <div class="col-md-6 text-right">
      <a href="#" class="text-info small">Reset Password</a>
    </div>
  </div>


  <%= submit_tag 'Login', class: 'btn btn-primary btn-cons m-t-10' %>
<% end %>

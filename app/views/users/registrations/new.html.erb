<h3>Register a New Account</h3>
<p>
  <small>
    Welcome to Antiquarium! This page is for registering a new account after receiving an invitation token. This token can only be used once to sign up. If you already have an account, please <%= link_to 'login', new_users_session_path %>.
  </small>
</p>

<%= form_for @user,
      url: create_users_registration_path(token: @token),
      method: :post,
      html: {
        id: 'form-register',
        class: 'p-t-15',
        role: 'form'
      } do |f| %>

  <div class="row">
    <div class="col-sm-6">
      <div class="form-group form-group-default required">
        <label>Email</label>
        <%= f.text_field :email, class: 'form-control', required: true %>
      </div>
    </div>
    <div class="col-sm-6">
      <div class="form-group form-group-default">
        <label>Token</label>
        <%= text_field_tag :token, @token, class: 'form-control', required: true, disabled: true %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-12">
      <div class="form-group form-group-default required">
        <label>Name</label>
        <%= f.text_field :name, placeholder: 'Your full name', class: 'form-control required', required: true %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-12">
      <div class="form-group form-group-default required">
        <label>Password</label>
        <%= f.password_field :password, placeholder: 'Minimum of 8 Characters', class: 'form-control required', required: true %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-12">
      <div class="form-group form-group-default required">
        <label>Password Confirmation</label>
        <%= f.password_field :password_confirmation, class: 'form-control required', required: true %>
      </div>
    </div>
  </div>

  <%= f.submit 'Sign up!', class: 'btn btn-primary btn-cons m-t-10' %>
<% end %>

<li class="p-r-15 inline fs-16">
  <div class="dropdown">
    <a href="javascript:;" id="notification-center" class="" data-toggle="dropdown">
      <%= notifications_tag %>
    </a>
    <div class="dropdown-menu notification-toggle" role="menu" aria-labelledby="notification-center">
      <div class="notification-panel">
        <div class="notification-body scrollable">

          <% [].each do |notification| %>
            <!-- Task Item -->
            <div class="notification-item unread clearfix">
              <div class="heading">
                <a href="#" class="text-complete">
                  <i class="fa fa-envelope m-r-10"></i>
                  <span class="bold"><%= notification.subject %></span>
                  <span class="fs-12 m-l-10">New message</span>
                </a>
                <span class="pull-right time">
                  <%= time_ago_in_words(notification.created_at) %> ago
                </span>
              </div>
              <div class="option" data-toggle="tooltip" data-placement="left" title="mark as read">
                <a href="javascript:;" class="mark"></a>
              </div>
            </div>
            <!-- / Task Item -->
          <% end %>

        </div>
        <div class="notification-footer text-center">
          <a href="#" class="">See all notifications</a>
          <a data-toggle="refresh" class="portlet-refresh text-black pull-right" href="#">
            <i class="pg-refresh_new"></i>
          </a>
        </div>
      </div>
    </div>
  </div>
</li>

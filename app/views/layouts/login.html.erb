<!DOCTYPE html>
<html>
<head>
  <%= render 'layouts/shared/meta' %>

  <title>Antiquarium</title>

  <!-- Antiquarium CSS-->
  <%= stylesheet_link_tag 'application', media: 'all' %>

  <!--[if lte IE 9]>
  <link href="pages/css/ie9.css" rel="stylesheet" type="text/css" />
  <![endif]-->

  <script type="text/javascript">
  window.onload = function() {
    // fix for windows 8
    if (navigator.appVersion.indexOf("Windows NT 6.2") != -1)
    document.head.innerHTML += '<link rel="stylesheet" type="text/css" href="pages/css/windows.chrome.fix.css" />'
  }
  </script>

  <!-- CSRF -->
  <%= csrf_meta_tags %>
</head>
<body class="fixed-header   ">
  <!-- START PAGE-CONTAINER -->
  <div class="login-wrapper ">
    <!-- START Login Background Pic Wrapper-->
    <div class="bg-pic">
      <!-- START Background Pic-->
      <%= image_tag 'login.jpg', class: 'lazy', 'data-src' => image_path('login.jpg'), 'data-src-retina' => image_path('login.jpg') %>
      <!-- END Background Pic-->
      <!-- START Background Caption-->
      <div class="bg-caption pull-bottom sm-pull-bottom text-white p-l-20 m-b-20">
        <h2 class="semi-bold text-white">Antiquities Trade Intelligence</h2>
        <p class="small">
          Copyright Â© 2015 Antiquarium LLC. All rights reserved.
        </p>
      </div>
      <!-- END Background Caption-->
    </div>
    <!-- END Login Background Pic Wrapper-->
    <!-- START Login Right Container-->
    <div class="login-container bg-white">
      <div class="p-l-50 m-l-20 p-r-50 m-r-20 p-t-50 m-t-30 sm-p-l-15 sm-p-r-15 sm-p-t-40">

        <%= yield %>

      </div>
    </div>
    <!-- END Login Right Container-->
  </div>
  <!-- END PAGE CONTAINER -->

  <!-- Antiquarium JS -->
  <%= javascript_include_tag 'application' %>

  <script>
    $(function()
    {
      $('#form-login').validate({
        //onfocusout: true,
        onkeyup: false
      })
    })
  </script>
</body>
</html>

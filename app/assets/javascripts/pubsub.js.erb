// Pusher
$(function() {
  var pubsub = new Pusher('<%= Pusher.key %>', {
    encrypted:    true,
    authEndpoint: '/pubsub/auth'
  });

  var channel = pubsub.subscribe('private-user.' + $.cookie('_antiquarium_id'));

  channel.bind('notification', function(content) {
    $('body').pgNotification(content).show();
  });

});
